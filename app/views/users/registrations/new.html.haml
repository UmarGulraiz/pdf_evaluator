= render "devise/shared/error_messages", resource: resource
.d-flex.justify-content-center.align-items-center{style: "height: calc(100vh - 110px)"}
  %div
    %h2.text-center.mb-3 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
      .field
        = f.label :name
        %br/
        = f.text_field :name, autocomplete: "name", class: "form-control"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "form-control"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
      .actions
        = f.submit "Sign up", class: "mt-3 mb-2 btn btn-dark w-100 "
        = link_to "Log in", new_session_path(resource_name), class: "btn btn-light w-100"
    -# = render "devise/shared/links"
