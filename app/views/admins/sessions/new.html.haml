.d-flex.justify-content-center.align-items-center{style: "height: calc(100vh - 110px)"}
  %div
    %h2.text-center.mb-3 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Log In", class: "mt-3 mb-2 btn btn-dark w-100 "
        = link_to "Sign Up", new_admin_registration_path, class: "btn btn-light w-100 mb-3"
      -# = link_to "Forgot your password?", new_password_path(resource_name)
