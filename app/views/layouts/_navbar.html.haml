%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  %a.navbar-brand{href: root_path} Pdf Evaluator
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
    - if user_signed_in?
      - if @document
        = link_to "DOWNLOAD PDF", user_dashboard_index_path(format: :pdf), class: "btn btn-outline-dark my-2 my-sm-0 mr-3"
      = link_to "Log Out", destroy_user_session_path, class: "btn btn-outline-danger my-2 my-sm-0", method: :delete
    - elsif root_path != request.path
      = link_to "Log In", new_user_session_path, class: "btn btn-outline-success my-2 my-sm-0"
      = link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-info my-2 my-sm-0 ml-2"
